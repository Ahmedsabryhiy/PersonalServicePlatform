@model TbNotificattionDTO


<div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title"> form Notification </h3>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#"></a></li>
                <li class="breadcrumb-item active" aria-current="page"></li>
            </ol>
        </nav>
    </div>
    <div class="row">
        <div class="col-md-8 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title"></h4>
                    <p class="card-description">  </p>
                    <form class="forms-sample" method="post" enctype="multipart/form-data"
                          asp-controller="Notifications" asp-action="Save" role="form">
                        <input asp-for="Id" type="hidden" />

                      
                        <div class="form-group">
                            <label asp-for="CustomerId"></label>
                            <select asp-for="CustomerId" class="form-control"
                                    asp-items="ViewBag.ListCustomers" required>
                                <option value="">-- Select Customer --</option>

                            </select>
                            <span asp-validation-for="CustomerId" class="text-danger"></span>
                        </div>
              



                        <div class="form-group ">
                            <label for="exampleInputUsername1"> Message</label>
                            <input asp-for="Message   " type="text " class="form-control" placeholder="Message">
                            <span asp-validation-for="Message"></span>
                        </div>

                        <div class="form-group ">
                            <label for="exampleInputUsername1">Notification Type</label>
                            <input asp-for="NotificationType    " type="text " class="form-control" placeholder="Notification Type">
                            <span asp-validation-for="Message"></span>
                        </div>

                        <div class="form-group ">
                            <label for="exampleInputUsername1"> IsRead</label>
                            <input asp-for="IsRead   " type="text " class="form-control" placeholder="IsRead">
                            <span asp-validation-for="IsRead"></span>
                        </div>
                      
                        <button type="submit" formmethod="post" class="btn btn-gradient-primary me-2">Save</button>
                        <button class="btn btn-light">New</button>
                    </form>
                </div>
            </div>
        </div>


    </div>
</div>

