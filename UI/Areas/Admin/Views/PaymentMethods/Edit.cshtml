@model TbPaymentDTO


<div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title"> form Payments</h3>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#"></a></li>
                <li class="breadcrumb-item active" aria-current="page"></li>
            </ol>
        </nav>
    </div>
    <div class="row">
        <div class="col-md-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title"></h4>
                    <p class="card-description">  </p>
                    <form class="forms-sample" method="post" enctype="multipart/form-data"
                          asp-controller="PaymentMethods" asp-action="Save" role="form">
                        <input asp-for="Id" type="hidden" />

                        <div class="form-group">
                            <label for="exampleInputUsername1">  Payment Method</label>
                            <input asp-for="PaymentMethod" type="text" class="form-control" placeholder=" First Name">
                            <span asp-validation-for="PaymentMethod"></span>
                        </div>

                        >

                        <div class="form-group">
                            <label for="exampleInputUsername1">Payment Status</label>
                            <input asp-for="PaymentStatus " type="text" class="form-control" placeholder="Payment Status">
                            <span asp-validation-for=" PaymentStatus "></span>
                        </div>

                        <div class="form-group ">
                            <label for="exampleInputUsername1">Payment Date</label>
                            <input asp-for="PaymentDate " type="date" class="form-control" placeholder="Payment Date">
                            <span asp-validation-for="PaymentDate"></span>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputUsername1" > Amount</label>
                            <input asp-for="Amount" type="text" class="form-control" placeholder="Amount">
                            <span asp-validation-for="Amount"></span>

                        </div>
                        <div class="form-group">
                            <label asp-for="BookingId "></label>
                            <select asp-for="BookingId" class="form-control"
                                    asp-items="ViewBag.ListBookings">
                                <option value="">-- Select Booking--</option>
                            </select>
                            <span asp-validation-for="BookingId" class="text-danger"></span>
                        </div>
                        <button type="submit" formmethod="post" class="btn btn-gradient-primary me-2">Save</button>
                        <button class="btn btn-light">New</button>
                    </form>
                </div>
            </div>
        </div>


    </div>
</div>

