@model TbProviderAvailabilityDTO 


<div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title"> form Service </h3>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#"></a></li>
                <li class="breadcrumb-item active" aria-current="page"></li>
            </ol>
        </nav>
    </div>
    <div class="row">
        <div class="col-md-8 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title"></h4>
                    <p class="card-description">  </p>
                    <form class="forms-sample" method="post" enctype="multipart/form-data"
                          asp-controller="ProviderAvailabitiy" asp-action="Save" role="form">
                        <input asp-for="Id" type="hidden" />

                        <div class="form-group">
                            <label for="exampleInputUsername1"> Available Date </label>
                            <input asp-for="AvailableDate " type="date" class="form-control" placeholder="Available Date">
                            <span asp-validation-for="AvailableDate"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ServiceId "></label>
                            <select asp-for="ServiceId " class="form-control"
                                    asp-items="ViewBag.ListServices">
                                <option value="">-- Select Service --</option>
                            </select>
                            <span asp-validation-for="ServiceId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ProviderId"></label>
                            <select asp-for="ProviderId" class="form-control"
                                    asp-items="ViewBag.ListProviders">
                                <option value="">-- Select Provider --</option>
                            </select>
                            <span asp-validation-for="ProviderId" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label for="exampleInputUsername1">Start Time </label>
                            <input asp-for="StartTime  " type="datetime" class="form-control" placeholder="Start Time">
                            <span asp-validation-for="StartTime"></span>
                        </div>

                        <div class="form-group">
                            <label for="exampleInputUsername1">End Time</label>
                            <input asp-for="EndTime " type="datetime" class="form-control" placeholder="End Time">
                            <span asp-validation-for="EndTime"></span>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputUsername1">Is Booked</label>
                            <input asp-for="IsBooked" type="text" class="form-control" placeholder="Is Booked">
                            <span asp-validation-for="IsBooked"></span>
                        </div>
                        <button type="submit" formmethod="post" class="btn btn-gradient-primary me-2">Save</button>
                        <button class="btn btn-light">New</button>
                    </form>
                </div>
            </div>
        </div>


    </div>
</div>

