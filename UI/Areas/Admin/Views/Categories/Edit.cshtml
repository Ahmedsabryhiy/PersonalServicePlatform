@model TbCategoryDTO 


<div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title"> form Category </h3>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#"></a></li>
                <li class="breadcrumb-item active" aria-current="page"></li>
            </ol>
        </nav>
    </div>
    <div class="row">
        <div class="col-md-8 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title"></h4>
                    <p class="card-description">  </p>
                    <form class="forms-sample" method="post" enctype="multipart/form-data"
                          asp-controller="Categories" asp-action="Save" role="form">
                        <input asp-for="Id" type="hidden" />

                        <div class="form-group">
                            <label for="exampleInputUsername1">  Category</label>
                            <input asp-for="Name " type="text" class="form-control" placeholder=" Category Name">
                            <span asp-validation-for="Name"></span>
                        </div>

                        >

                        <div class="form-group">
                            <label for="exampleInputUsername1">Description</label>
                            <input asp-for="Description " type="text" class="form-control" placeholder="Last Name">
                            <span asp-validation-for=" Description "></span>
                        </div>
                     
                        <button type="submit" formmethod="post" class="btn btn-gradient-primary me-2">Save</button>
                        <button class="btn btn-light">New</button>
                    </form>
                </div>
            </div>
        </div>


    </div>
</div>

