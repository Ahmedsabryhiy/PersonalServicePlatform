@model List<TbCustomerProfileDTO  >



<div class="container-scroller">

    <div class="container-fluid page-body-wrapper">
        <div class="main-panel">
            <div class="content-wrapper">
                <div class="page-header">
                    <h3 class="page-title"> Service </h3>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="#"></a></li>
                            <li class="breadcrumb-item active" aria-current="page">Data  Customers</li>
                        </ol>
                    </nav>
                </div>
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">services</h4>
                        <div class="row">
                            <div class="col-12">
                                <a asp-controller="Customers" asp-action="Edit" class="btn btn-success btn-fw">New</a>
                                <table id="order-listing" class="table">
                                    <thead>
                                        <tr>
                                            <th> first Name</th>

                                            <th>Last Name</th>
                                            <th>Email</th>
                                            <th>Address</th>
                                            <th>Phone</th>

                                            <th>Actions</th>

                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@item.FirstName </td>
                                                <td>
                                                    @item.LastName
                                                </td>
                                                <td>@item.Email </td>
                                                <td> @item.Address</td>
                                                <td> @item.Phone</td>

                                                <td class="col-md-4" style="margin:0px;padding:0px;">
                                                    <a style="height:max-content"
                                                       asp-controller="Customers" asp-action="Edit" asp-route-id="@item.Id"
                                                       class="btn btn-info btn-fw">Edit</a>


                                                    <a asp-controller="Customers" asp-action="Delete" asp-route-id="@item.Id"
                                                       class="btn btn-danger btn-fw"
                                                       onclick="return confirm(" Are you sure");">Delete</a>
                                                </td>

                                            </tr>
                                        }




                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- content-wrapper ends -->
            <!-- partial -->
        </div>
        <!-- main-panel ends -->
    </div>
    <!-- page-body-wrapper ends -->
    @if(TempData ["MessageType"] != null)
    {
        <script>
            $(document).ready(function () {
                let messageType = @TempData["MessageType"];
                console.log(messageType);
                switch (messageType) {
                    case 1:
                       alert.success('Your data has been saved successfully', 'Saved Successfully');
                        break;
                    case 2:
                        alert.error('Your data has not been saved successfully',' Save Failed');
                        break;
                    case 3:
                        alert.success('Your data has been updated successfully','Deleted Successfully');
                        break;
                    case 4:
                        alert.error('Your data has been deleted successfully','Delete Failed');
                        break;
                        default:
                        console.log("Nuknow message type");
                        break;
                }

            });
           
        </script>
    
    }


@section Scripts {
    <!-- Plugin js for this page -->
    <script src="~/admin/assets/vendors/datatables.net/jquery.dataTables.js"></script>
    <script src="~/admin/assets/vendors/datatables.net-bs4/dataTables.bootstrap4.js"></script>
    <!-- End plugin js for this page -->
    <!-- Custom js for this page -->
    <script src="~/admin/assets/js/data-table.js"></script>
    <!-- End custom js for this page -->
}


